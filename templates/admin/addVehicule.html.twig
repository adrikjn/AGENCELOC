{% extends "base.html.twig" %}

{% block body %}
 {% if edit %}
	<h1 class="text-center my-5 text-primary">Modifier Vehicule</h1>
 {% else %}
	<h1 class="text-center my-5 text-primary">Ajouter Vehicule</h1>
 {% endif %}
 
	<div class="container">
        {{ form_start(form, {
            novalidate: 'novalidate'
        }) }}

            {{ form_row(form.titre) }}
            {{ form_row(form.marque) }}
            {{ form_row(form.modele) }}
            {{ form_row(form.description) }}
            {{ form_row(form.photo) }}
            {{ form_row(form.prix_journalier) }}

            <input type="submit" value="Envoyer" class="btn btn-primary">
        {{ form_end(form) }}
    </div>

{% endblock %}
