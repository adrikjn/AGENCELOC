{% extends "base.html.twig" %}

{% block title %}
	Réserver
{% endblock %}

{% block body %}
	{% if app.user %}
		<div class="container">
			<h1 class="text-center text-primary my-3">Veuillez sélectionner la date de départ et la date de fin du véhicule</h1>
			{{ form_start(form) }}
			{{ form_row(form.date_heure_depart) }}
			{{ form_row(form.date_heure_fin) }}

			<input type="submit" class="btn btn-primary">
			{{ form_end(form) }}
		</div>
	{% else %}
		<h1 class="text-center text-primary my-3">Veuillez vous connecter afin de réserver cette voiture !</h1>
	{% endif %}
{% endblock %}